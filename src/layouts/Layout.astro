---
interface Props {
  title: string;
}

const { title } = Astro.props.title;
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import BlogPostingJSONLD from "../components/BlogPostingJSONLD.astro";

import data from "../data/site.json";
console.log(Astro.props.title)
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="description" content={data.siteDescription} />
    <meta name="viewport" content="width=device-width" />
    <SEO
    canonical={data.site}
    title={Astro.props.title}
    description="Building a Personal Digital AI prescence"
    openGraph={{
      basic: {
        title: "Headshed Dev",
        type: "article",
        image:
          data.site + "/images/waving_sm.png",        
      },
      optional: {
        description: "Building a Personal Digital AI prescence",
      }
    }}
    twitter={{
      creator: "@ajbcontracts",
    }}
    extend={{
      // extending the default link tags
      link: [{ rel: "icon", href: "/favicon.svg" }],
      // extending the default meta tags
      meta: [
        {
          name: "twitter:image",
          content:
          "/images/waving_sm.png",
        },
        { name: "twitter:title", content: "Headshed Dev" },
        { name: "twitter:description", content: "Building a Personal Digital AI prescence" },
      ],
    }}
  />
  <BlogPostingJSONLD 
    title = "Headshed Dev" 
    created="2024-01-01"
    updated="2024-01-01"  
    description="Building a Personal Digital AI prescence" 
     />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css"
    />
    <title>{title}</title>
    <script is:inline>
      //check for dark mode in local storage using the theme var
      if (localStorage.getItem("theme") === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>

    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-N1DFMGZR4K"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-N1DFMGZR4K");
    </script>
  </head>
  <body>
    <div class="bg-stone-100 dark:bg-slate-800 min-h-screen pt-20">
      <!-- <Nav class="fixed top-0 w-full z-50" /> -->
      <Nav />
      <div class="container max-w-4xl">
        <slot />
        <Footer />
      </div>
    </div>
    <style>
      .container {
        /* max-width: 1280px; */
        margin: 0 auto;
        padding: 1rem;
      }
      .section {
        padding: 60px 0;
      }
      #footer {
        position: fixed;
      }

      @media (max-width: 767px) {
        main {
          min-height: calc(100vh - 69px);
        }
        footer > ul > li {
          display: none;
        }
        footer {
          position: relative;
        }
      }
    </style>
  </body>
</html>
