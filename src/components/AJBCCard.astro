---
interface Props {
	title: string;
	body: string;
	// optional
	href?: string;
}

const { href, title, body } = Astro.props;


---


<li
	id={title}
	class=" w-96 overflow-hidden  m-5 mx-auto"
	
>
	<a
		href={href}
		class="block"
	>
		<div class="p-4 text-center">
			<h2 class="text-xl font-medium text-gray-700 dark:text-gray-400 mb-2">
				{title}
				
			</h2>
			<p class="text-gray-700 dark:text-gray-400">
				{body}
			</p>
		</div>
	</a>
</li>
<style></style>
